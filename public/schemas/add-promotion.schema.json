{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "discount": {
            "type": "string",
            "minLength": 1
        },
        "provider": {
            "type": "string",
            "minLength": 1
        },
        "amount": {
            "type": "string",
            "pattern": "^[1-9][0-9]*$"
        }
    },
    "required": [
        "name",
        "description",
        "discount",
        "provider",
        "amount"
    ]
}